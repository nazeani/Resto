@using Core.Models;
@model Chef
<form asp-action="DeletePost" method="post" enctype="multipart/form-data">
    <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">@Model.FullName</h5>
    <input asp-for="@Model.Id" hidden value="@Model.Id"/>
    <a asp-action="Index" class="card-link">Go back</a>
    <button type="submit" class="card-link">Delete</button>
  </div>
</div>
</form>